<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_chi_tiet_san_pham"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lehoanggiang.traicaythanhsang.activity.ChiTietSanPham"
    android:orientation="vertical">
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbarchitietsanpham"
    android:background="#0d56f5"
    app:titleTextColor="#fffdfd"
    app:title="Chi tiết sản phẩm"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

</android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageviewchitietsanpham"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/textviewtenchitietsanpham"
                        android:text="Tên sản phẩm"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/textviewgiachitietsanpham"
                        android:layout_margin="10sp"
                        android:textSize="20sp"
                        android:text="Giá sản phẩm"
                        android:textColor="#f20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Spinner
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Spinner>
                    <Button
                        android:id="@+id/buttondatmua"
                        android:textSize="15sp"
                        android:text="Thêm giỏ hàng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#f00000"
            android:layout_marginTop="5dp"
            android:textSize="30dp"
            android:text="Mô tả chi tiết sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:text="Hello"
                android:paddingBottom="10dp"
                android:id="@+id/textviewmotachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>
