<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/white">

    <!-- Tiêu đề (tùy chọn, có thể bỏ nếu không cần) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa Sản Phẩm"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp" />

    <!-- Ô nhập tên sản phẩm -->
    <EditText
        android:id="@+id/edit_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm"
        android:inputType="text"
        android:padding="5dp" />

    <!-- Ô nhập giá sản phẩm -->
    <EditText
        android:id="@+id/edit_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá sản phẩm"
        android:inputType="number"
        android:padding="5dp" />

    <!-- Ô nhập mô tả sản phẩm -->
    <EditText
        android:id="@+id/edit_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả sản phẩm"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:minLines="3"
        android:padding="5dp" />

    <!-- Nhãn cho Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại sản phẩm"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <!-- Spinner chọn loại sản phẩm -->
    <Spinner
        android:id="@+id/spinner_product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_category_prompt"
        android:padding="5dp" />

    <!-- Nút chọn ảnh -->
    <Button
        android:id="@+id/button_choose_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh từ thư viện"
        android:layout_marginTop="8dp"
        android:padding="5dp" />

    <!-- Hiển thị ảnh sản phẩm -->
    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp" />

    <!-- Nút lưu -->
    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:layout_marginTop="8dp"
        android:padding="5dp" />

</LinearLayout>